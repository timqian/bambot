<?xml version="1.0"?>
<robot name="bambot">

  <material name="green">
    <color rgba="0.06 0.4 0.1 1.0" />
  </material>
  <material name="black">
    <color rgba="0.06 0.1 0.1 1.0" />
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="meshes/Bambot_v0_base.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <origin xyz="-0.58 -0.255 0.168" rpy="0 0 0" />
      <material name="green" />
    </visual>
  </link>

  <link name="left_motor">
    <visual>
      <geometry>
        <mesh filename="meshes/Base_Motor.stl" />
      </geometry>
      <origin xyz="0 -0.04 0.1" rpy="3.14159 0 0" />
      <material name="black" />
    </visual>
  </link>
  <joint name="left_motor" type="fixed">
    <parent link="base_link" />
    <child link="left_motor" />
    <origin xyz="-0.1 0.0 -0.03" rpy="0 1.5708 -2.0944" /> <!-- 120 degrees -->
    <axis xyz="0 0 1" />
  </joint>

  <link name="right_motor">
    <visual>
      <geometry>
        <mesh filename="meshes/Base_Motor.stl" />
      </geometry>
      <origin xyz="0 -0.04 0.1" rpy="3.14159 0 0" />
      <material name="black" />
    </visual>
  </link>
  <joint name="right_motor" type="fixed">
    <parent link="base_link" />
    <child link="right_motor" />
    <origin xyz="-0.1 -0.48 -0.03" rpy="0 1.5708 2.0944" /> <!-- -120 degrees -->
    <axis xyz="0 0 1" />
  </joint>

  <link name="back_motor">
    <visual>
      <geometry>
        <mesh filename="meshes/Base_Motor.stl" />
      </geometry>
      <origin xyz="0 -0.04 0.1" rpy="3.14159 0 0" />
      <material name="black" />
    </visual>
  </link>
  <joint name="back_motor" type="fixed">
    <parent link="base_link" />
    <child link="back_motor" />
    <origin xyz="-0.52 -0.25 -0.03" rpy="0 1.5708 0" /> <!-- 0 degrees (rear) -->
    <axis xyz="0 0 1" />
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <mesh filename="meshes/BambotWheel.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <geometry>
        <mesh filename="meshes/BambotWheel.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <link name="back_wheel">
    <visual>
      <geometry>
        <mesh filename="meshes/BambotWheel.stl" scale="0.001 0.001 0.001" />
      </geometry>
      <material name="black" />
    </visual>
  </link>


  <joint name="left_wheel" type="continuous">
    <parent link="base_link" />
    <child link="left_wheel" />
    <origin xyz="-0.1 0.0 -0.03" rpy="0 1.5708 -2.0944" /> <!-- 120 degrees -->
    <axis xyz="0 0 1" />
  </joint>

  <joint name="back_wheel" type="continuous">
    <parent link="base_link" />
    <child link="back_wheel" />
    <origin xyz="-0.52 -0.25 -0.03" rpy="0 1.5708 0" /> <!-- 0 degrees (rear) -->
    <axis xyz="0 0 1" />
  </joint>

  <joint name="right_wheel" type="continuous">
    <parent link="base_link" />
    <child link="right_wheel" />
    <origin xyz="-0.1 -0.48 -0.03" rpy="0 1.5708 2.0944" /> <!-- -120 degrees -->
    <axis xyz="0 0 1" />
  </joint>
</robot>